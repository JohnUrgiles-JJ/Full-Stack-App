{
    "version": 2,
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "npm install",
    "functions": {
      "server/index.js": {
        "runtime": "nodejs18.x"
      }
    },
        "rewrites": [
          {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
          },
          {
            "source": "/(.*)",
            "destination": "/client/dist/$1"
          }
        ]
      }